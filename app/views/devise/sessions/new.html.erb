<body class="font-mono bg-gray-100">
  <!-- Container -->
  <div class="container mx-auto">
    <div class="flex justify-center px-6 my-12">
      <!-- Row -->
      <div class="w-full xl:w-3/4 lg:w-11/12 flex">
        <!-- Col -->
        <div
          class="w-full h-auto bg-gray-400 hidden lg:block lg:w-5/12 bg-cover rounded-l-lg"
          style="background-image: url('https://is5-ssl.mzstatic.com/image/thumb/Purple124/v4/ad/57/20/ad572062-c434-ff33-a067-24e45da1b041/source/512x512bb.jpg')"
        ></div>
        <div class="w-full lg:w-7/12 bg-white p-5 rounded-lg lg:rounded-l-none">
          <h3 class="pt-4 text-2xl text-center">Welcome Back!</h3>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="px-8 pt-6 pb-8 mb-4 bg-white rounded" >
            <div class="mb-4 mb-4 md:mr-2 md:mb-0 ">
              <%= f.label :email, class:"block mb-2 text-sm font-bold text-gray-700" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"%>
            </div>
            <div class="mb-4">
              <%= f.label :password, class:"block mb-2 text-sm font-bold text-gray-700"%>
              <%= f.password_field :password, autocomplete: "current-password", class:"w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 rounded shadow appearance-none focus:outline-none focus:shadow-outline"  %><!--#border border-red-500-->
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="mb-4">
                <%= f.check_box :remember_me, class: "r-2 leading-tight" %>
                <%= f.label :remember_me, class:"text-sm"%>
              </div>
            <% end %>
            <div class="mb-6 text-center">
                <%= f.submit "Sign in", class: "w-full px-4 py-2 font-bold text-white bg-blue-500 rounded-full hover:bg-blue-700 focus:outline-none focus:shadow-outliney" %>
            </div>
            <hr class="mb-6 border-t" />
            <div class="text-center">
                <%= render "devise/shared/links", class:"inline-block text-sm text-blue-500 align-baseline hover:text-blue-800" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</body> 
